@* @using InternshipForm.ViewModel *@
@{
    Layout = null;
    bool showAdminLTEStudent = false;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.4/css/bulma.min.css" integrity="sha512-HqxHUkJM0SYcbvxUw5P60SzdOTy/QVwA1JJrvaXJv4q7lmbDZCmZaqz01UPOaQveoxfYRv1tHozWGPMcuTBuvQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<!DOCTYPE html>
<html lang="en">
<head>
    <title>dashboard</title>
    <meta charset="utf-8">


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        /* Adjustments for Bulma Navbar */
        .navbar {
            font-size: 18px; /* Increase font size */
            padding: 10px; /* Add padding */
            background-color:beige;
        }

        .navbar-brand {
            font-size: 22px; /* Increase brand font size */
            font-weight: bold;
            color: blue;
        }

        .navbar-menu {
            margin-top: 10px; /* Add margin */
        }

        .navbar-item {
            font-size: 18px; /* Increase font size of navbar items */
        }

        .navbar-link {
            color: black; /* Change link color */
        }

            

        /* Additional styling for buttons */
        .button.is-primary {
            font-size: 18px; /* Increase font size of primary button */
        }

        .button.is-light {
            font-size: 18px; /* Increase font size of light button */
        }

        .btn {
            padding: 10px 20px; /* Adjust padding */
            font-size: 14px;
        }

        .navbar-item {
            color: red;
            font-weight: bold;
            text-decoration: none; /* Remove underline */
            margin-right: 15px;
        }

        .body{
            background-color:aqua;
        }
       
        .container {
            text-align: center; 
            max-width: 1000px; 
            padding: 40px;
            font-size: 20px; 
            margin-top:150px;
            background-color:beige;
        }
        .dropdown-item{
            font-size:12px;
        }
        .dropdown-toggle{
            font-size:18px;
        }
    </style>


    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="">
                <a class="navbar-brand" href="#">IMS</a>

            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="@Url.Action()">
                    Home
                </a>
                <a class="navbar-item" href="@Url.Action(Path)">
                    About
                </a>
                @if (!showAdminLTEStudent)
                {
                    <a class="navbar-item" href="@Url.ActionLink("ViewInternship","Student")">
                        Internships
                    </a>
                }
                <a class="navbar-item" href="@Url.ActionLink("ContactUs","Student")">
                    Contact
                </a>
                <hr class="navbar-divider">
                <a class="navbar-item">
                    Report an issue
                </a>

                </div>
            

             <div class="navbar-end"> 
                <div class="navbar-item">
                    
                        <div class="btn-group">
                           
                          
                                <a class="" href="@Url.Action("UserLogin", "RegisterUser")">Login </a>
                                

                            </div>
                        </div>
 
                        <div class="btn-group">

                            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Register
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("UserRegister", "RegisterUser")">Register as Student</a>
                                <a class="dropdown-item" href="@Url.Action("CompanyRegister", "RegisterUser")">Register as Company</a>

                            </div>
                        </div>
                    
                </div>
            </div>
        </div>

    </nav>
</head>

<body>
    <div class="container">
        <h1><strong>Welcome to the Internship Management System</strong></h1>
        <p>This is a platform where you can manage internships for students, companies, and colleges.</p>
        <p>Explore our features:</p>
        <ul>
            <li>Student internship applications</li>
            <li>Company internship postings</li>
            <li>College partnership opportunities</li>
        </ul>
        <p>Contact us for more information:</p>
        <ul>
            <li>Email: info@internshipmanagement.com</li>
            <li>Phone: 123-456-7890</li>
        </ul>
        
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>

