 */
    form {
        border: 3px solid #f1f1f1;
    }
    body {
       
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .text-red {
        color: red;
        text-align:center;
    }

    input[type=submit]:hover {
        background-color: #45a049;
    }

    input[type=submit] {
        background-color: #04AA6D;
        color: white;
        cursor: pointer;
    }

    .card {
        box-shadow: 5px 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width: 40%;
        margin: auto;
        margin-top: 50px;
        padding: 2px;
        background-color: white;
        height: auto; /* Adjust the height as needed */
    }


    .btnn{
        background-color:darkgreen;
        color: white;
        padding: 14px 20px;
        margin: 4px 2px;
        border: none;
        cursor: pointer;
        width: 100%;
        text-align:center
    }

    .btn {
        background-color:white;
        color:;
        padding: 14px 20px;
        margin: 4px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        text-align: center
    }

        .btn:hover {
            background-color: darkgreen;
        }
    .text{
        color:black;
        font-weight:bold;
        text-align:center;
    }
    .heading{
        color:darkgreen;
    }
</style>

<div class="card">
    <form method="post" enctype="multipart/form-data" asp-controller="RegisterUser" asp-action="UserRegister">
        <p class="container register">
        <p class="row">
        <p class="col-md-3 ">

            <h2 style ="text-align:center " class="heading"> <strong>Welcome!!</strong></h2>
        <p>
            <h6 style="text-align:center"> Register your account here </h6>

        </p>

        <p class="col-md-9 register-right">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="../RegisterUser/UserRegister" role="tab" aria-controls="home" aria-selected="true"><strong>Register</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="../RegisterUser/UserLogin" role="tab" aria-controls="profile" aria-selected="false"><strong>Login</strong></a>
                </li>
            </ul>
        <p class="tab-content" id="myTabContent">
        <p class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <h3 class="register-heading"></h3>
        <p class="row register-form">
        <p class="col-md-6">
        <p class="form-group">
                                            @Html.HiddenFor(x => x.Id)
                                            @Html.LabelFor(x => x.FirstName, new{@class = "text"})
                                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-red" })
        </p>

        <p class="form-group">
                                            @Html.LabelFor(x => x.LastName, new { @class = "text" })
                                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-red" })
        </p>

        <p class="form-group">
                                            @Html.LabelFor(x => x.Email, new { @class = "text" })
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-red" })
        </p>
        <p class="form-group">
                                            @Html.LabelFor(x => x.Password, new { @class = "text" })
                                            @Html.PasswordFor(X => X.Password, new { @class = "form-control" })
            <span id="result"></span>
                                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-red" })
        </p>
        </p>
        </p>
        </p>


        </p>
        </p>
        </p>
        <input type="submit" id="submitBtn" value="Register" class="btnn"/>

        
    </form>
    <div class="container">
        <h4 style="text-align:center">Or Sign in With</h4>

        <div class="oauth">
            <a href="https://www.facebook.com" class=" btn" data-onsuccess="onSignIn">
                <i class="fa-brands fa-facebook"></i>
            </a>
            <a href="https://www.google.com" class="btn" ,data-onsuccess="onSignIn">
                <i class="fa-brands fa-google"></i>
            </a>
        </div>
    </div>




    
</div>
<script src="https://apis.google.com/js/platform.js" async defer></script>
<script src="script.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
