
<!DOCTYPE html>
<html>
<head>
    <!-- head content -->
</head>
<body>
    <!-- navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Your Application</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @if (!string.IsNullOrEmpty(ViewBag.UserEmail))
                        {
                            <form method="post" action="@Url.Action("Logout", "RegisterUser")" class="form-inline">
                                <button type="submit" class="btn btn-link navbar-btn">Logout</button>
                            </form>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- other content -->
    @RenderBody()

    <!-- footer content -->
    <footer class="footer">
        <div class="container">
            <span class="text-muted">Your footer content here.</span>
        </div>
    </footer>

    <!-- Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
