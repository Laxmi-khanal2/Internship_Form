@model RegisterCompany


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


<style>


    form {
        border: 3px solid #f1f1f1;
    }

    body {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .text-red {
        color: red;
    }

    .card {
        box-shadow: 5px 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width: 40%;
        margin: auto;
        margin-top: 50px;
        padding: 0px;
        background-color: white;
    }

    .btnn {
        background-color: darkgreen;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }

    .btn {
        background-color: white;
        padding: 14px 20px;
        margin: 4px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        text-align: center
    }

        .btn:hover {
            background-color: darkgreen;
        }

    input[type=submit]:hover {
        background-color: #45a049;
    }

    .text {
        color: black;
        font-weight: bold;
    }

    .heading {
        color: darkgreen;
    }
</style>



<div class="card">
    <form method="post" enctype="multipart/form-data" asp-controller="RegisterUser" asp-action="CompanyLogin">
        <p class="container register">
        <p class="row">
        <p class="col-md-3">
            <h3 style="text-align:center" class="heading"><strong>Welcome Back!</strong></h3>
        <p>  <h6 style="text-align:center">  You can login from here </h6> </p>

        </p>
        <p class="col-md-9 register-right">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="../RegisterUser/CompanyLogin" role="tab" aria-controls="home" aria-selected="true"><strong>Company</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="../RegisterUser/UserLogin" role="tab" aria-controls="profile" aria-selected="false"><strong>User</strong></a>
                </li>
            </ul>
        <p class="tab-content" id="myTabContent">
        <p class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <h3 class="register-heading"></h3>
        <p class="row register-form">
        <p class="col-md-6">
        <p class="form-group">
                                        @Html.HiddenFor(x => x.Id)
                                        @Html.LabelFor(X => X.Email, new { @class = "text" })
                                        @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Your Email *" })
                                        @Html.ValidationMessageFor(e => e.Email, "", new { @class = "text-red" })
        </p>
        <p class="form-group">
                                        @Html.LabelFor(x => x.Password, new { @class = "text" })
                                        @Html.PasswordFor(e => e.Password, new { id = "password", @class = "form-control", placeholder = "Password *" })
            <span id="result"></span>
                                        @Html.ValidationMessageFor(e => e.Password, "", new { @class = "text-red" })
        </p>
        <p class="col-md-6">

        </p>
        </p>

        </p>
        </p>
        </p>

        </p>
        </p>


        <input type="submit" id=" sumbitBtn" value="Log In" class="btnn" />
    </form>
    <div class="container">
        <h4 style="text-align:center">Or Login in With</h4>

        <div class="col">
            <a href="https://www.facebook.com" class="btn">
                <i class="fa-brands fa-facebook"></i>
            </a>
            <a href="https://www.google.com" class="btn">
                <i class="fa-brands fa-google"></i>
            </a>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"> </script>
<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<script>



    $(function () {
        var msg = '@ViewData["result"]';
        if (msg == '1') {
            alert("User Details Insearted Sucessfully");
            window.location.href = '@Url.Action("CompanyLogin", "RegisterUser")';

        }
    });
</script>
