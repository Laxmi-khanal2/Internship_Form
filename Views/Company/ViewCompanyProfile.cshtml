@model CompanyProfile



<style>
    

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width:80%;
        margin: auto;
        margin-top: 50px;
        padding: 20px;
        border-radius: 15px;
        background-color: #f8f9fa;
        height: 800px;
        position: relative;
        overflow-y: auto; /* Enable vertical scroll */
    }

    .card-title {
        font-size: 24px;
        margin-bottom: 20px;
        color: #dc3545;
    }

    .label {
        font-weight: bold;
        color: #000000;
    }

    .card-text {
        margin-bottom: 10px;
        font-weight: normal;
        color: #343a40;
    }

    .apply-button {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btnn {
        position: absolute;
        top: 10px;
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>



    <div class="card">

        <div class="card-body">

            <div class="row">
                @Html.HiddenFor(x=>x.Id)
                <div class="col-md-12">
                    <h5 class="card-title">@Model.Name</h5>
                </div>



                <div class="col-md-12">
                    <span class="label">Company-Address</span>
                    <p class="card-text">@Model.Address</p>
                </div>
                <div class="col-md-12">
                    <span class="label">Contact:</span>
                    <p class="card-text">@Model.Contact</p>
                </div>
               
            </div>
        <div class="row">
            <div class="col-md-12">
                <span class="label"> Mission and Values:</span>
                <p class="card-text">@Html.Raw(Model.MissionsandValues)</p>
            </div>
        </div>


            <div class="row">
                <div class="col-md-12">
                    <span class="label"> Description:</span>
                    <p class="card-text">@Html.Raw(Model.Description)</p>
                </div>
            </div>


        </div>

    </div>