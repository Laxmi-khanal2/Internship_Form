@using InternshipForm.ViewModel
@model InternshipFormViewModel


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
<h2> Details</h2>


<div class="">
<div style="width:90%; margin:0 auto;">
    <table id="myTable" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>PersonalInformation</th>
                <th>Education</th>
                <th>GuardianDetails</th>
                <th>References</th>
               
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>


    </table>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>


<script>
    $('#myTable').DataTable({

        "paging": true,
        "pageLength": 7,
        "processing": true,
        "serverSide": true,
        "lengthMenu": [2, 4, 6],


        "ajax": {
            "url": "/Details/LoadData",
            "type": "POST",
            "dataType": "Json",

            "error": function (xhr, error, thrown) {
                console.log("DataTables error:", error);
            }
        },
        "columnDefs": [{
            "targets": [0],

            "searchable": false
        }],

        // table ko header haru ko column

        "columns": [
            { data: "id", "name": "Id", "autoWidth": true },
            { data: "personalInformation", "name": "PersonalInformation", "autoWidth": true },
            { data: "education", "name": "Education", "autoWidth": true },
            { data: "guardianDetails", "name": "GuardianDetails", "autoWidth": true },
            { data: "references", "name": "References", "autoWidth": true },



            {
                "render": function (data, type, row, meta) {
                    return '<a class="btn btn-info" href="/PersonalInformationDataTable/Edit?id=' + row.id + '">Edit</a>';
                }
            },
            {
                data: null, render: function (data, type, row) {
                    return '<a class="btn btn-danger" href="/PersonalInformationDataTable/Delete?id=' + row.id + '">Delete</a>';;
                }
            },


        ]




    });

</script>