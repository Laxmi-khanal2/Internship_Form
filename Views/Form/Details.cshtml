@using InternshipForm.ViewModel
@model InternshipFormViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<style>
    .card {
        box-shadow: 5px 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width: 80%;
        margin: auto;
        margin-top: 50px;
        padding: 20px;
    }
</style>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
<h2>Details</h2>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <div style="width:90%; margin:0 auto;">
                <label for="FirstNameFilter">Filter by First Name:</label>
                @Html.DropDownList("NameFilter", ViewData["NameFilter"] as IEnumerable<SelectListItem>, "Select")

             

                <table id="myTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>InternId</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>HasLicence</th>
                            <th>SchoolOrCollegeName</th>
                            <th>Major</th>
                            <th>Address</th>
                            <th>CollegeorCompany</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>

<script>
    
        var table = $('#myTable').DataTable({
            "paging": true,
            "pageLength": 12,
            "processing": true,
            "serverSide": true,
            "lengthMenu": [2, 5, 10, 15, 20],
            "ajax": {
                "url": "/Form/GetData",
                "type": "POST",
                "dataType": "json",
                "error": function (xhr, error, thrown) {
                    console.log("DataTables error:", error);
                }
            },
            "columnDefs": [{
                "targets": [0],
                "searchable": false
            }],
            "columns": [
                { data: "internId", "name": "InternId", "autoWidth": true },
                { data: "firstName", "name": "FirstName", "autoWidth": true },
                { data: "lastName", "name": "LastName", "autoWidth": true },
                { data: "mobile", "name": "Mobile", "autoWidth": true },
                { data: "email", "name": "Email", "autoWidth": true },
                { data: "hasLicence", "name": "HasLicence", "autoWidth": true, render: function (data, type, row) { return data ? 'Yes' : 'No'; } },
                { data: "schoolOrCollegeName", "name": "SchoolOrCollegeName", "autoWidth": true },
                { data: "major", "name": "Major", "autoWidth": true },
                { data: "address", "name": "Address", "autoWidth": true },
                { data: "collegeorCompany", "name": "CollegeorCompany", "autoWidth": true },
                {
                    "render": function (data, type, row, meta) {
                        return '<a class="btn btn-info" href="/Form/Create?Id=' + row.internId + '">Edit</a>';
                    }
                },
                {
                    data: null, render: function (data, type, row) {
                        return '<a class="btn btn-danger" href="/Form/Delete?Id=' + row.internId + '">Delete</a>';
                    }
                }
            ]
        });

    function filterTable() {
        var selectedValue = $('#FirstNameFilter').val();
        table.column(2).search(selectedValue).draw();
    }

    // function UserChanged() {
    //     var country = $('#FirstNameFilter option:selected').val();
    //     ApplyDataTable(country);
    // }
    
</script>
